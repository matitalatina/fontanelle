generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model BicycleParking {
  id             Int     @id
  lat            Float
  lng            Float
  covered        Boolean @default(false)
  indoor         Boolean @default(false)
  access         String?
  fee            Boolean @default(false)
  bicycleParking String?
  surveillance   Boolean @default(false)
  capacity       Int?
  gh5            String

  @@index([gh5])
  @@map("bicycle_parkings")
}

model Toilet {
  id            Int     @id
  lat           Float
  lng           Float
  fee           Boolean @default(false)
  openingHours  String?
  changingTable Boolean @default(false)
  gh5           String

  @@index([gh5])
  @@map("toilets")
}

enum StationType {
  fountain
  house
}

model Station {
  id   Int         @id
  cap  Int?
  lat  Float
  lng  Float
  name String?
  type StationType
  gh5  String

  @@index([gh5])
  @@map("stations")
}

model Playground {
  id           Int     @id
  lat          Float
  lng          Float
  name         String?
  openingHours String?
  indoor       Boolean @default(false)
  fee          Boolean @default(false)
  supervised   Boolean @default(false)
  gh5          String

  @@index([gh5])
  @@map("playgrounds")
}
